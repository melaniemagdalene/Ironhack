<header class="container">
    <div class="row">
        <h1 class="center-item">Create a post.</h1>
    </div>
</header>


<div class="container">
  <div class="row">

    <%= form_for :post, url: posts_path do |f| %>
      <div>
        <%= f.text_field :title, placeholder: "Title" %>
      </div>
     
      <div>
        <%= f.text_area :description, placeholder: "Description" %>
      </div>

      <div class="center-item">
          <%= f.submit %>
      </div>
    <% end %>
    
  </div>
</div>
