<header class="container">
	<div class="row">
		<h1 class="center-item">View all posts and connect.</h1>
	</div>
	<hr>
</header>


<div class="container">
	<div class="row">
		<% @posts.each do |post| %>
			<div class="text-center">
				<span class="post-time"><%= post.created_at.strftime('%b %d, %Y') %></span>
				<h4 class="display-4"><%= post.title %></h4>
				<div class="lead"><%= post.description %></div>
			</div>

			<div class="text-center">
				<b><%= link_to "Read More", post_path(post) %></b>
			</div>
			<br>
		<% end %>
	</div>
</div>
