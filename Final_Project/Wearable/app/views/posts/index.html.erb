<header class="container">
	<div class="row">
		<h1 class="center-item">View all posts and connect.</h1>
		<ul>
			<% @posts.each do |post| %>
				<li>Title: <%= post.title %></li>
				<li>Description: <%= post.description %></li>
			<% end %>
		<br>
		</ul>
	</div>
	<hr>
</header>


<div class="container">
	<div class="row">
		<% @posts.each do |post| %>
			<div class="col-md-12">
				<div class="text-center">
					<h2><%= post.title %></h2>
					<h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
				</div>

				<div class="text-center">
					<%= link_to "Details", post_path(post) %>
				</div>
				<br>
			</div>
		<% end %>
	</div>
</div>
