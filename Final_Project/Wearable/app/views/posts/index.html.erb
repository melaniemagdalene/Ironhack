<header class="container">
	<div class="row">
		<h1 class="center-item">View all posts and connect.</h1>
	</div>
	<hr>
</header>


<div class="container">
	<div class="row">
		<% @posts.each do |post| %>
			<div class="text-center">
				<h4 class="display-4"><%= post.title %></h4>
				<div class="lead"><%= post.description %></div>
				<span><%= post.created_at.strftime('%b %d, %Y') %></span>
			</div>

			<div class="text-center">
				<%= link_to "Details", post_path(post) %>
			</div>
			<br>
		<% end %>
	</div>
</div>
