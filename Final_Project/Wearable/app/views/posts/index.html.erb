<div class="container">
	<div class="row">
		<% @posts.each do |post| %>
			<div class="text-center">
				<% policy_scope(current_user.posts).each do |post| %>
					<p><%= link_to post.title, post_path(post) %></p>
				<% end %>

				<h2><%= post.title %></h2>
				<h5><%= post.description %></h5>
				<h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
			</div>

			<div class="text-center">
				<%= link_to "Details", post_path(post) %>
			</div>
			<br>
		<% end %>
	</div>
</div>
