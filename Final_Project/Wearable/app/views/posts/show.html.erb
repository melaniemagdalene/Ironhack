<header class="container">
  <div class="row">
    <h1>View your post below.</h1>
  </div>
  <br>
</header>

<div class="container text-center">
	<div class="row">
	    <p><%= @post.title %></p>

	    <p><%= @post.description %></p>
		
		<% if policy(@post).update? %>
			<%= link_to "Edit post", edit_post_path(@post) %>
		<% end %>

		<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post" } %>

		<%= link_to "View all posts", posts_path(@post) %>
	</div>
</div>

<div class="container text-center">
	<div class="row">
		<div>
		<%= form_for @comment, url: comments_path(@post.id), method: :post do |f| %>
		    <%= f.text_area :comment, placeholder: "Comment" %>
		    <%= hidden_field :post_id, @post.id %>
		</div>
		<%= f.submit %>
	<br>
	<br>
	<%= @post.comments.each do | comment | %>
		<% comment.comment %>
	<% end %>
	<% end %>
	</div>
</div>


