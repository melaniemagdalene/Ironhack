<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |error_message| %>
			<li><%= error_message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @user do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :email %>
	<%= f.email_field :email %>
	<br>

	<%= f.submit 'Sign Up!' %>
<% end %>
