<p><strong><h3>New Post <%= @post.title %></h3></strong></p>
<p><%= image_tag(@post.gif_url) %></p>

<strong>Votes: </strong> <%= @post.nov %>

<form action="/posts/<%= @post.id %>/upvote" method="POST">
	<!-- Authenticity token -->
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<button type="submit">Upvote</button>
</form>

<form action="/posts/<%= @post.id %>/downvote" method="POST">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<button type="submit">Downvote</button>
</form>

<%= link_to "Add Another Post", new_post_path(@post) %>
